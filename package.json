	},
	"homepage": "https://github.com/AjaniBilby/predictable#readme",
	"dependencies": {
		"@prisma/client": "^5.0.0",
		"discord.js": "^14.11.0",
		"dotenv": "^16.3.1",
		"find-process": "^1.4.7",
		"htmx-router": "^0.0.2",
		"mimetype": "^0.0.8",
		"npm-run-all": "^4.1.5",
		"tiny-invariant": "^1.3.1",
		"typed-html": "^3.0.1"
	},
	"devDependencies": {
		"@types/node": "^20.4.5",
		"esbuild": "^0.18.16",
